modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "postgresql", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flask_website"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "flask_website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
cd /home/runner/work && python -c \"
import sys
try:
    import flask_socketio
    print('✓ Flask-SocketIO available')
except ImportError:
    print('✗ Flask-SocketIO missing - installing...')
    sys.exit(1)

try:
    import qrcode
    print('✓ QRCode library available')
except ImportError:
    print('✗ QRCode library missing - installing...')
    sys.exit(1)

try:
    import pandas
    print('✓ Pandas available')
except ImportError:
    print('✗ Pandas missing - installing...')
    sys.exit(1)

try:
    import sklearn
    print('✓ Scikit-learn available')
except ImportError:
    print('✗ Scikit-learn missing - installing...')
    sys.exit(1)

try:
    import pytz
    print('✓ Pytz available')
except ImportError:
    print('✗ Pytz missing - installing...')
    sys.exit(1)

print('All required dependencies are available!')
\""""

[[ports]]
localPort = 5000
externalPort = 80
